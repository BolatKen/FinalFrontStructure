{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "src/components/shared/ColorConfigure/ColorConfigure.jsx",
    "src/components/ui/Arrow/Arrow.jsx",
    "src/components/ui/ButtonOrange/ButtonOrange.jsx",
    "src/components/ui/ColorItem/ColorItem.jsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
  ".next/types"
  ]
}
